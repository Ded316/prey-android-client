<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backup_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/password_description"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:text="@string/password_description"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="344dp"
        android:layout_height="35dp"
        android:layout_below="@+id/password_description"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:background="#dddddd"
        android:ems="15"
        android:paddingLeft="40dp"

        android:hint="@string/password"
        android:imeOptions="actionGo"
        android:inputType="textPassword"

        android:textColor="#1E2938"
        android:textColorHint="#1E2938"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_description" />

    <TextView
        android:id="@+id/password_description2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/password"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:text="@string/password_description2"
        android:textSize="18sp"
        android:textColor="#1E2938"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="344dp"
        android:layout_height="35dp"
        android:layout_below="@+id/password_description2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="24dp"
        android:background="#dddddd"
        android:ems="15"
        android:paddingLeft="40dp"
        android:hint="@string/password2"
        android:imeOptions="actionGo"
        android:inputType="textPassword"

        android:textColor="#1E2938"
        android:textColorHint="#1E2938"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_description2"
        app:layout_constraintVertical_bias="0.035"
        tools:textColorHighlight="#1E2938" />

</android.support.constraint.ConstraintLayout>